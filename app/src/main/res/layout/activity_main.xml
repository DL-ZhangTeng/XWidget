<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">
    <com.scott.xwidget.widget.XView
        app:XView_corner="15dp"
        app:XView_state="pressed"
        android:textColor="#0000ff"
        android:text="CheckBox"
        android:gravity="center"
        app:XView_blur_type="outer"
        app:XView_blur_radius="3dp"
        app:XView_blur_color="#00ff00"
        app:XView_stated_blur_color="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="120dp"
        android:layout_height="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>